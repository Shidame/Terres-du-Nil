%h3 Sign In
= simple_form_for :session, url: sessions_path do |f|
  - if flash[:error]
    .alert.alert-error
      = flash[:error]

  = f.input :email, required: false, autofocus: true, input_html: {value: flash[:email]}
  = f.input :password, required: false, input_html: { class: 'error' }

  = f.button :submit, class: 'btn-primary'

