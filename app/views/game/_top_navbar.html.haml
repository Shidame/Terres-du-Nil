.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .container.nav-collapse
        %ul.nav
          %li.dropdown
            = link_to "#", data: {toggle: "dropdown"}, class: "dropdown-toggle" do
              %i.icon-home
              = current_city.name
              %b.caret
            %ul.dropdown-menu
              = render partial: 'cities/names_list', locals: { cities: current_user.cities }
          %li= link_to "My cities", cities_path
        %ul.nav.pull-right
          %li= link_to "Home", root_path
          %li= link_to "Logout", logout_path

